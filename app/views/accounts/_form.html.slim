= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      h2 = "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      ul
        - @account.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :note
    = f.text_field :note
  .field
    = f.label :balance
    = f.number_field :balance
  .field
    = f.label :currency
    = f.collection_select :currency_cd, Account.currencies.hash, :last, :first, prompt: true
  .actions = f.submit
